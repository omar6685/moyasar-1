<p style="color: green"><%= notice %></p>

<h1>Reports</h1>

<div id="reports">
  <% @reports.each do |report| %>
    <%= render report %>
    <p>
      <%= link_to "Show this report", report %>
    </p>
    <%= link_to "PDF", report_path(report, format: :pdf) %>

  <% end %>
</div>

<%= link_to "New report", new_report_path %>
